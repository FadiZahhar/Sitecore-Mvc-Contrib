<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>   
    <pipelines>

      <!-- Mvc Events -->
      <mvc.getRenderer>
        <processor patch:before="processor[@type='Sitecore.Mvc.Pipelines.Response.GetRenderer.GetViewRenderer, Sitecore.Mvc.Contrib']" type="Sitecore.Mvc.Contrib.Pipelines.Response.GetRenderer.AreaController, Sitecore.Mvc.Contrib" />
      </mvc.getRenderer>
      
      <mvc.resultExecuting>
        <processor type="Sitecore.Mvc.Contrib.Pipelines.MvcEvents.InjectViewInPlaceholderFilter, Sitecore.Mvc.Contrib"/>
      </mvc.resultExecuting>

    </pipelines>

  </sitecore>
</configuration>
